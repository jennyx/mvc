{% extends "base.html.twig" %}

{% block title %}Card game{% endblock %}

{% block main %}

<h1>Card draw many</h1>

<span class="card">{{ cards }}</span>
{{ include('flash.html.twig') }}
<p>Cards left in deck: {{ cardsLeft }}</p>

<form method="post" action="">
    <input type="number" name="num_cards" min="1" max={{ cardsLeft }} value="1">
    <input type="submit" name="do_it" value="Draw cards">
</form>

{% endblock %}
